APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_DATABASE_ID=your_database_id_here
APPWRITE_COLLECTION_ID=your_collection_id_here

# Used by the Appwrite schema migration scripts (scripts/schema.js)
APPWRITE_API_KEY=your_appwrite_server_api_key_here

# Optional: used by the client to call your Appwrite Function for AI descriptions
# Defaults to "comics_description_ai" if unset.
APPWRITE_FUNCTION_ID_GENERATE_DESC=comics_description_ai

# Cloudinary
# NOTE: the current app code uploads via an unsigned preset and uses a hardcoded cloud name.
# These vars are kept here for convenience / future refactor.
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>